{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
    "plugins": ["react", "@typescript-eslint"],
    "parserOptions": {
        "project": "./tsconfig.json"
      },
  },
  "rules": {
    "react/jsx-filename-extention": [
      1,
      { "extention": [".js", ".jsx", ".ts", ".tsx"] }
    ]
  }
}
